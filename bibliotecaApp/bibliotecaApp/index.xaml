<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bibliotecaApp.LibrosPage">

    <ContentPage.Content>
        <StackLayout>

            <TableView x:Name="librosTableView" Intent="Form">
                <TableRoot>
                    <TableSection Title="Lista de Libros">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10,0,10,0">
                                <Label Text="Título" FontAttributes="Bold" />
                                <Label Text="Autor" FontAttributes="Bold" />
                                <Label Text="Género" FontAttributes="Bold" />
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>

            <Button x:Name="cmdRegresar" Text="Regresar"
            Clicked="cmdRegresar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
