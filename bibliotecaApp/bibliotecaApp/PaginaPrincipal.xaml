<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bibliotecaApp.PaginaPrincipal">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblInicioSesion" 
                   Text="Iniciar Sesión" FontSize="35" 
                   Padding="30,0,30,0"/>

            <Entry x:Name="txtUsername" Placeholder="Nombre de usuario" ></Entry>
            <Entry x:Name="txtPassword" Placeholder="Contraseña" IsPassword="True"></Entry>

            <Button x:Name="cmdCrudLibros" Text="Ingresar al sistema" Clicked="cmdCrudLibros_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>